@page
@model BookMe.WebApp.Pages.User.Index
<h3>Usertabelle</h3>

<p>
    Diese Tabelle zeigt alle angelegten User. Sie dient nur der Veranschaulichung und wird
    in echten Programmen natürlich nie veröffentlicht.
</p>
<table class="table table-sm">
    <thead>
    <tr>
        <th>Username</th>
        <th>Type</th>
        <th>Hotel(s)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var u in Model.Users)
    {
    <tr>
        <td>@u.Username</td>
        <td>@u.Usertype</td>
        <td>@string.Join(", ", u.Hotels.Select(s=>s.Name).OrderBy(s=>s))</td>
    </tr>
    }
    </tbody>
</table>