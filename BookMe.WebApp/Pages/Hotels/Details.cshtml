@page "{guid}"
@model BookMe.WebApp.Pages.Hotels.Details
<h3>Hotel @Model.Hotel.Name</h3>
<h4>List of all Bookings</h4>
    <table class="table table-sm">
        <thead>
        <tr>
            <th>Guest</th>
            <th>Date</th>
            <th>Days</th>
            <th>Room Type</th>
            <th>Room Price</th>
            <th>Booking Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model.Hotel.Bookings) {
            <tr>
                <td>@b.Guest.Email</td>
                <td>@b.Date</td>
                <td>@b.BookingDuration</td>
                <td>@b.Room.RoomType</td>
                <td>@b.Room.Price</td>
                <td>@b.BookingPrice</td>
            </tr>
        }
        </tbody>
    </table>

